@model FinancialManagementSystem1.Models.Expense

@{
    ViewData["Title"] = "Editar Gasto";
}

<h2>Editar Gasto</h2>

<form asp-action="EditExpense" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" class="form-control" asp-for="Description" required />
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input type="number" class="form-control" asp-for="Amount" step="0.01" required />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="date" class="form-control" asp-for="Date" required />
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Categoría</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Expense" class="btn btn-secondary">Cancelar</a>
</form>
